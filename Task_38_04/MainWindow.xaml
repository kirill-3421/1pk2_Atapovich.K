<Window x:Class="Task_38_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_38_04"
        mc:Ignorable="d"
        Title="Учёт студентов" Height="400" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        >
    
    <UniformGrid Columns="2" Margin="10">
        <Grid Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Фамилия"
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>

            <Label Content="Имя"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   />

            <Label Content="Отчество"
                   Grid.Row="2"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   />

            <Label Content="Группа"
                   Grid.Row="3"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   />

            <Label Content="Пол"
                   Grid.Row="4"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   />

            <Label Content="Дата рождения"
                   Grid.Row="5"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   />

            <TextBox x:Name="surnameTextBox"
                     Grid.Row="0"
                     Grid.Column="1"/>

            <TextBox x:Name="nameTextBox"
                     Grid.Row="1"
                     Grid.Column="1"/>

            <TextBox x:Name="patronymicTextBox"
                     Grid.Row="2"
                     Grid.Column="1"/>

            <TextBox x:Name="groupTextBox"
                     Grid.Row="3"
                     Grid.Column="1"/>

            <ComboBox Name="genderComboBox"
                      Grid.Row="4"
                      Grid.Column="1"
                      Margin="5">
                <ComboBoxItem Content="Мужской"/>
                <ComboBoxItem Content="Женский"/>
            </ComboBox>

            <DatePicker x:Name="BirthDate"
                        Margin="0,0,0,10"
                        Grid.Row="5"
                        Grid.Column="1"/>

            <UniformGrid Columns="2"
                         Grid.Row="6"
                         Grid.Column="1">
                <Button Content="Добавить"
                        x:Name="addStudentButton"
                        Click="addStudentButton_Click"
                        MaxHeight="30"
                        MaxWidth="100"
                        Margin="5,10,5,0"
                        Padding="5"
                        IsDefault="True"
                        />
                <Button Content="Очистить"
                        x:Name="deleteStudentButton"
                        Click="deleteStudentButton_Click"
                        MaxHeight="30"
                        MaxWidth="100"
                        Margin="5,10,5,0"
                        Padding="5"
                        IsCancel="True"
                        />
            </UniformGrid>
        </Grid>
        <ListBox x:Name="studentsListBox"
                 Background="Beige"
                 MouseDoubleClick="studentsListBox_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить"
                              x:Name="deleteStudentMenuItem"
                              Click="deleteStudentMenuItem_Click"/>
                    <MenuItem Header="Подробнее"
                              x:Name="showStudentMenuItem"
                              Click="showStudentMenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

    </UniformGrid>
</Window>
